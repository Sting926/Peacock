<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.xfdsj.sample.MenuWithFABActivity">

  <com.xfdsj.peacock.PeacockMenu
      xmlns:app="http://schemas.android.com/apk/res-auto"
      android:id="@+id/floatingBtn"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@drawable/button_action_red_selector"
      android:layout_centerInParent="true"
      app:startAngle="180"
      app:endAngle="360"
      app:menuIco="@drawable/ic_action_important"
      app:radius="@dimen/action_menu_radius">

    <com.xfdsj.peacock.PeacockMenu
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:startAngle="0"
        app:endAngle="0"
        app:menuIco="@drawable/ic_action_camera">

      <com.xfdsj.peacock.PeacockMenu
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:menuIco="@drawable/ic_action_picture"/>

      <com.xfdsj.peacock.PeacockMenu
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:menuIco="@drawable/ic_action_video"/>

      <com.xfdsj.peacock.PeacockMenu
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:menuIco="@drawable/ic_action_location_found"/>

      <com.xfdsj.peacock.PeacockMenu
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:menuIco="@drawable/ic_action_headphones"/>
    </com.xfdsj.peacock.PeacockMenu>

    <com.xfdsj.peacock.PeacockMenu
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:menuIco="@drawable/ic_action_picture"/>

    <com.xfdsj.peacock.PeacockMenu
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:menuIco="@drawable/ic_action_video"/>

    <com.xfdsj.peacock.PeacockMenu
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:menuIco="@drawable/ic_action_location_found"/>

    <com.xfdsj.peacock.PeacockMenu
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:menuIco="@drawable/ic_action_headphones"/>
  </com.xfdsj.peacock.PeacockMenu>
</RelativeLayout>
